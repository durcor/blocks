#!/bin/sh
# shellcheck disable=1090,2154

. "${XDG_CACHE_HOME-$HOME/.cache}/wal/colors.sh"
blockcolor=$color12
txtcolor=$color8

fah_log="${XDG_CONFIG_HOME-$HOME/.config}/fah/log.txt"

# Common distributed computing binaries:
# - boinc-client
# - foldingathome

if systemctl is-enabled boinc-client >/dev/null; then
	dist_prj=""
	perm_level="sudo systemctl"
	project_command=boinc-client
elif systemctl --user is-enabled foldingathome >/dev/null; then
	dist_prj=""
	block_notify="notify-send -i ~/.local/bin/i3blocks/img/f@h.png -h string:x-canonical-private-synchronous:i3bdistcompute"
	project_command=foldingathome
	perm_level="systemctl --user"
	status_command(){
		$block_notify "F@H Status" "$(tail ~/.config/fah/log.txt)"
	}
else
	exit
fi

case $BLOCK_BUTTON in
	1) # Left Click
		status_command
		;;
	2) # Middle Click
		if $perm_level is-active $project_command >/dev/null; then
			$block_notify "Stopping $project_command"
			$perm_level stop $project_command
			$block_notify "$project_command stopped"
		else
			$block_notify "Starting $project_command"
			$perm_level start $project_command
			$block_notify "$project_command started"
		fi
		;;
	3) # Right Click
		xdg-open http://localhost:7396
		;;
	4) # Scroll Up
		;;
	5) # Scroll Down
		;;
	8) # Rear Side Button
		xdg-open http://localhost:7396
		;;
	9) # Front Side Button
		xdg-open http://localhost:7396
		;;
esac

#  - telescope
#  - molecule
#  - microscope
#  - pill
#  - biohazard
#  - atom

get_steps_per_second(){
	cur_step=$(tail "$fah_log" | grep -v "Web" | grep -v "WARNING" | tail -1)
	cur_step_count=$(echo "$cur_step" | awk '{print $2}')
	cur_step_seconds=$(echo "$cur_step" | awk '{print $1}' | awk -F':' '{print $1*60*60 + $2*60 + $3}')

	prev_step=$(tail "$fah_log" | grep -v "Web" | grep -v "WARNING" | tail -2 | head -1)
	prev_step_count=$(echo "$prev_step" | awk '{print $2}')
	prev_step_seconds=$(echo "$prev_step" | awk '{print $1}' | awk -F':' '{print $1*60*60 + $2*60 + $3}')

	steps_per_second=$(echo "($cur_step_count - $prev_step_count)/($cur_step_seconds - $prev_step_seconds)" | bc)

	block_out="$block_out $steps_per_second steps/s"
}

if [ "$project_command" = "boinc-client" ]; then
	return
else
	current_fah_status=$(tail -1 "$fah_log")
	# TODO Use switch case
	if echo "$current_fah_status" | grep -q 'Except\|exit'; then
        block_out=""
	elif echo "$current_fah_status" | grep -q 'Complete'; then
        block_out="$(tail -1 "$fah_log" | awk '{print $7}')"
		get_steps_per_second
	elif echo "$current_fah_status" | grep -q 'Temperature\|Web'; then
        block_out="$(tail -20 "$fah_log" | grep 'Complete' | tail -1 | awk '{print $7}')"
		get_steps_per_second
	elif echo "$current_fah_status" | grep -q 'checkpoint'; then
        block_out=""
	elif echo "$current_fah_status" | grep -q 'Download'; then
        block_out=""
	elif echo "$current_fah_status" | grep 'Upload'; then
        block_out=""
	else
        block_out=""
	fi
fi

printf "\
<b><span foreground='$blockcolor' background='$color0'></span>\
<span foreground='$txtcolor' background='$blockcolor'> %s</span>\
<span foreground='$color0' background='$blockcolor'></span></b>\n" \
"$dist_prj $block_out "
